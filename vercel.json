// vercel.json
{
  "version": 2,
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/chatWithOpenAI.js"
    }
  ]
}

// package.json
{
  "name": "chat-backend",
  "version": "1.0.0",
  "description": "Chat backend service for interacting with OpenAI and Airtable",
  "main": "api/chatWithOpenAI.js",
  "scripts": {
    "start": "node api/chatWithOpenAI.js"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "node-fetch": "^2.6.7"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
